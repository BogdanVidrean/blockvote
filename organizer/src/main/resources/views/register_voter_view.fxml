<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="rootAnchor" stylesheets="@../css/register_voter_view.css"
            xmlns="http://javafx.com/javafx/10.0.1"
            fx:controller="com.blockvote.organizer.controllers.RegisterVoterController">
   <children>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <ImageView fitHeight="175.0" fitWidth="114.0" layoutX="10.0" layoutY="112.0" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../../../../../voter/src/main/resources/images/block_parachute.png"/>
                     </image>
                     <VBox.margin>
                        <Insets bottom="30.0" right="140.0"/>
                     </VBox.margin>
                  </ImageView>
                  <ImageView fitHeight="175.0" fitWidth="114.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../voter/src/main/resources/images/block_parachute.png"/>
                     </image>
                     <VBox.margin>
                        <Insets bottom="100.0"/>
                     </VBox.margin>
                  </ImageView>
               </children>
            </VBox>
            <VBox alignment="CENTER" stylesheets="@../../../../../voter/src/main/resources/css/vote.css">
               <children>
                  <Text fx:id="userMessage" fill="#ff6060" strokeType="OUTSIDE" strokeWidth="0.0">
                     <VBox.margin>
                        <Insets bottom="20.0"/>
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="20.0"/>
                     </font>
                  </Text>
                  <Label layoutX="176.0" layoutY="60.0" styleClass="text"
                         stylesheets="@../../../../../voter/src/main/resources/css/check_eligibility.css"
                         text="SOCIAL SECURITY NUMBER" textAlignment="CENTER" textFill="WHITE"/>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="90.0" prefHeight="37.0" prefWidth="600.0">
                     <children>
                        <TextField fx:id="ssnTextField" alignment="CENTER" prefHeight="46.0" prefWidth="619.0">
                           <HBox.margin>
                              <Insets left="5.0"/>
                           </HBox.margin>
                           <font>
                              <Font size="24.0"/>
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <Label stylesheets="@../css/register_voter_view.css" text="INSERT THE ADDRESS" textAlignment="CENTER"
                         textFill="WHITE">
                     <VBox.margin>
                        <Insets top="20.0"/>
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="47.0" prefWidth="600.0">
                     <children>
                        <TextField fx:id="addressTextField" alignment="CENTER" prefHeight="46.0" prefWidth="619.0">
                           <HBox.margin>
                              <Insets left="5.0"/>
                           </HBox.margin>
                           <font>
                              <Font size="24.0"/>
                           </font>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets/>
                     </VBox.margin>
                  </HBox>
                  <Label stylesheets="@../css/register_voter_view.css" text="INSERT THE ADDRESS AGAIN"
                         textAlignment="CENTER" textFill="WHITE">
                     <VBox.margin>
                        <Insets top="20.0"/>
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="47.0" prefWidth="600.0">
                     <children>
                        <TextField fx:id="addressTextFieldAgain" alignment="CENTER" prefHeight="46.0" prefWidth="619.0">
                           <HBox.margin>
                              <Insets left="5.0"/>
                           </HBox.margin>
                           <font>
                              <Font size="24.0"/>
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onMousePressed="#registerNewAccount" text="REGISTER"/>
                        <Button mnemonicParsing="false" onMousePressed="#verifySSNStatus" text="VERIFY SSN">
                           <HBox.margin>
                              <Insets left="20.0"/>
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="100.0" top="15.0"/>
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <ImageView fitHeight="175.0" fitWidth="114.0" layoutX="10.0" layoutY="63.0" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../../../../../voter/src/main/resources/images/block_parachute.png"/>
                     </image>
                     <VBox.margin>
                        <Insets bottom="30.0" left="150.0"/>
                     </VBox.margin>
                  </ImageView>
                  <ImageView fitHeight="175.0" fitWidth="114.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../voter/src/main/resources/images/block_parachute.png"/>
                     </image>
                     <VBox.margin>
                        <Insets bottom="200.0"/>
                     </VBox.margin>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
